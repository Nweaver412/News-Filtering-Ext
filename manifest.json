{
  "manifest_version": 3,
  "name": "Word Catcher",
  "version": "1.1.0",
  "description": "Word Catcher finds topics in lists of sites",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "96": "assets/icon96.png"
    }
  },
  "icons": {
    "96": "assets/icon96.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:8080"
  }
}
